@model HCMA.ViewModels.Employees.EmployeeDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="team-single">
        <div class="row">
            <div class="col-lg-4 col-md-5 xs-margin-30px-bottom">
                <div class="team-single-img">
                    <img src="@Model.Employee.Image" alt="">
                </div>
                <div class="bg-light-gray padding-30px-all md-padding-25px-all sm-padding-20px-all text-center">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => Model.Employee.Username)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => Model.Employee.Username)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => Model.Employee.Password)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => Model.Employee.Password)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => Model.Employee.DateOfBirth)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.Employee.DateOfBirth == DateTime.Parse("1/1/0001") || Model.Employee.DateOfBirth == null)
                            {
                                <h6 class="ml-5">
                                    <i>
                                        @Model.Employee.Username didn't specify a date of birth!
                                    </i>
                                </h6>
                            }
                            else
                                @Html.DisplayFor(model => Model.Employee.DateOfBirth)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => Model.Employee.StartDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => Model.Employee.StartDate)
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="col-lg-8 col-md-7">
                <div class="team-single-text padding-50px-left sm-no-padding-left">
                    <h4 class="font-size38 sm-font-size32 xs-font-size30">@Model.Employee.FirstName @Model.Employee.LastName</h4>
                    <div class="contact-info-section margin-40px-tb mt-4">
                        <ul class="list-style9 no-margin">
                            <li>
                                <div class="row">
                                    <div class="col-md-5 col-5">
                                        <i class="fas fa-graduation-cap text-orange"></i>
                                        <strong class="margin-10px-left text-orange">Position:</strong>
                                    </div>
                                    <div class="col-md-7 col-7">
                                        <p>@Model.Employee.Department.Name</p>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="row">
                                    <div class="col-md-5 col-5">
                                        <i class="far fa-gem text-yellow"></i>
                                        <strong class="margin-10px-left text-yellow">Role:</strong>
                                    </div>
                                    <div class="col-md-7 col-7">
                                        <p>@Model.Employee.Role.Name</p>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="row">
                                    <div class="col-md-5 col-5">
                                        <i class="fas fa-dollar-sign text-lightred"></i>
                                        <strong class="margin-10px-left text-lightred">Salary:</strong>
                                    </div>
                                    <div class="col-md-7 col-7">
                                        <p>@Model.Employee.Salary</p>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="row">
                                    <div class="col-md-5 col-5">
                                        <i class="fas fa-map-marker-alt text-green"></i>
                                        <strong class="margin-10px-left text-green">Address:</strong>
                                    </div>
                                    <div class="col-md-7 col-7">
                                        @if (Model.Employee.Address == null)
                                        {
                                            <h6>
                                                <i>
                                                    @Model.Employee.Username didn't specify an address!
                                                </i>
                                            </h6>
                                        }
                                        else
                                        {
                                            <p>@Model.Employee.Address</p>
                                        }
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="row">
                                    <div class="col-md-5 col-5">
                                        <i class="fas fa-mobile-alt text-purple"></i>
                                        <strong class="margin-10px-left xs-margin-four-left text-purple">Phone:</strong>
                                    </div>
                                    <div class="col-md-7 col-7">
                                        <p>@Model.Employee.Phone</p>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="row">
                                    <div class="col-md-5 col-5">
                                        <i class="fa fa-venus-mars text-sky"></i> 
                                        <strong class="margin-10px-left xs-margin-four-left text-sky">Gender:</strong>
                                    </div>
                                    <div class="col-md-7 col-7">
                                        <p>@Model.Employee.Gender.ToString()</p>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="row">
                                    <div class="col-md-5 col-5">
                                        <i class="fas fa-envelope text-pink"></i>
                                        <strong class="margin-10px-left xs-margin-four-left text-pink">Email:</strong>
                                    </div>
                                    <div class="col-md-7 col-7">
                                        <p><a href="javascript:void(0)">@Model.Employee.Email</a></p>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Employee.Id">Edit</a> |
    <a asp-action="All">Back to List</a>
</div>
